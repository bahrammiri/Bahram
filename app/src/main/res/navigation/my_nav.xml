<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.bahram.weather7.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/previewFragment"
        android:name="com.bahram.weather7.preview.PreviewFragment"
        android:label="PreviewFragment">
        <action
            android:id="@+id/action_previewFragment_to_mainActivity2"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/briefFragment"
        android:name="com.bahram.weather7.brief.BriefFragment"
        android:label="BriefFragment">
        <action
            android:id="@+id/action_briefFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.bahram.weather7.detail.DetailActivity"
        android:label="DetailActivity" />
</navigation>